var rng = RandomNumberGenerator.new()
var offset = 50
func _ready():
	for n in amount:
		spawnescena(n*offset)

'''
func _process(delta):
	if Input.is_action_just_pressed(\"pausa\"):
		pauseMenu()
		
func pauseMenu():
	if paused:
		menu_pausa.hide()
		Engine.time_scale = 1
	else:
		menu_pausa.show()
		Engine.time_scale = 0
	paused = !paused
	
'''
